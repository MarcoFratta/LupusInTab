{
  "name": "lupus-in-tabula",
  "private": true,
  "version": "1.11.15",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "mobile:setup": "./scripts/setup-capacitor.sh",
    "mobile:setup:playstore": "./scripts/setup-play-store.sh",
    "mobile:build:android": "npm run build && npx cap sync android",
    "mobile:build:ios": "npm run build && npx cap sync ios",
    "mobile:run:android": "npm run mobile:build:android && npx cap run android",
    "mobile:run:ios": "npm run mobile:build:ios && npx cap run ios",
    "mobile:open:android": "npx cap open android",
    "mobile:open:ios": "npx cap open ios",
    "mobile:serve": "npx cap serve",
    "mobile:build:apk": "./scripts/build-local-apk.sh",
    "mobile:build:apk:docker": "./scripts/build-apk-docker.sh",
    "mobile:build:aab": "./scripts/build-play-store-aab.sh",
    "mobile:build:playstore": "./scripts/build-play-store-optimized.sh",
    "mobile:setup:playstore:quick": "./scripts/quick-play-store-setup.sh",
    "mobile:install:sdk": "./scripts/install-android-sdk.sh"
  },
  "dependencies": {
    "@capacitor/app": "^7.0.2",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/network": "^7.0.2",
    "@capacitor/splash-screen": "^7.0.2",
    "@capacitor/status-bar": "^7.0.2",
    "@headlessui/vue": "^1.7.23",
    "pinia": "^3.0.3",
    "vue": "^3.3.4",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/assets": "^3.0.5",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^10.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "semantic-release": "^22.0.0",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^1.6.0",
    "vue-tsc": "^3.0.5"
  }
}
